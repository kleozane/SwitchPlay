@model SwitchPlay.Models.GameForCreation
@{
    ViewData["Title"] = "Shto Loje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2 class="card-title pb-2">Shto Loje</h2>
            </div>
        </div>
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 px-1">
                    <div class="form-group">
                        <label>Titulli</label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Titulli">
                    </div>
                </div>
                <div class="col-md-6 pl-1">
                    <div class="form-group">
                        <label>Zgjidh Studion</label> <br />
                        <select asp-for="StudioId" id="studioList" style="width: 100%;" class="select2" data-placeholder="Zgjidh">
                            @foreach (var x in Model.Studios)
                            {
                                <!option value="@x.Id">@x.Name</!option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 pl-1">
                    <div class="form-group">
                        <label>Pershkrimi</label>
                        <textarea asp-for="Description" type="text" class="form-control" placeholder="Pershkrimi">
                            </textarea>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 px-1">
                    <div class="form-group">
                        <label>Zgjidh Kategorite</label> <br />
                        <select asp-for="CategoryIds" id="categoryList" style="width: 100%;" class="select2 select2-multiple" multiple="multiple" data-placeholder="Zgjidh">
                            @foreach (var x in Model.Categories)
                            {
                                <!option value="@x.Id">@x.Name</!option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-6 pl-1">
                    <div class="form-group">
                        <label>Zgjidh Platformat</label> <br />
                        <select asp-for="PlatformIds" id="platformList" style="width: 100%;" class="select2 select2-multiple" multiple="multiple" data-placeholder="Zgjidh">
                            @foreach (var x in Model.Platforms)
                            {
                                <!option value="@x.Id">@x.Name</!option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 px-1">
                    <div class="form-group">
                        <label>Cmimi</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Cmimi">
                    </div>
                </div>
                <div class="col-md-6 pl-1">
                    <div class="form-group">
                        <label>Hapesira ne Memorie</label>
                        <input asp-for="Size" type="number" step="0.01" class="form-control" placeholder="Hapesira">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 px-1">
                    <div class="form-group">
                        <label>Parametrat</label>
                        <input asp-for="Requirements" type="text" class="form-control" placeholder="Parametrat">
                    </div>
                </div>
                <div class="col-md-6 pl-1">
                    <div class="form-group">
                        <label>Data e Publikimit</label>
                        <div class="input-group">
                            <input type="text" asp-for="ReleaseDate" class="form-control" id="releaseDate" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <span class="fas fa-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 pl-1">
                    <label>Imazhi</label>
                    <input asp-for="Image" type="file" class="form-control" id="formFile">
                    <label class="formLabel" for="formFile"></label>
                </div>
            </div>
            <button type="submit" class="btn btn-info btn-fill pull-right">Ruaj</button>
            <div class="clearfix"></div>
        </form>
    </div>
</div>

@section Scripts {

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.9/dist/flatpickr.min.css" />

    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.9/dist/flatpickr.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <script>

        flatpickr("#releaseDate", {
            enableTime: true,
            dateFormat: "d/m/Y",
            locale: "ru", // Set the locale to handle the dd/mm/yyyy format
            defaultDate: "today"
        });

        $('#categoryList').select2();
        $('#platformList').select2();
        $('#studioList').select2();
    </script>
}