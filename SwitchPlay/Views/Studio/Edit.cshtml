@model SwitchPlay.Models.StudioForModification
@{
    ViewData["Title"] = "Ndrysho Studion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2 class="card-title pb-2">Ndrysho Studio</h2>
            </div>
        </div>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6 px-1">
                    <div class="form-group">
                        <label>Emri</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Emri">
                    </div>
                </div>
                <div class="col-md-6 pl-1">
                    <div class="form-group">
                        <label>Zgjidh Kategorite</label> <br />
                        <select asp-for="CategoryIds" id="studioList" style="width: 100%;" class="select2 select2-multiple" multiple="multiple" data-placeholder="Zgjidh">
                            @foreach (var x in Model.Categories)
                            {
                                var isSelected = Model.StudioCategories.Any(a => a.CategoryId == x.Id);
                                <!option selected="@isSelected" value="@x.Id">@x.Name</!option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 pl-1">
                    <div class="form-group">
                        <label>Pershkrimi</label>
                        <input asp-for="Description" type="text" class="form-control" placeholder="Pershkrimi">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 px-1">
                    <label>Foto</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input asp-for="Logo" type="file" class="custom-file-input" id="inputGroupFile01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-info btn-fill pull-right">Ruaj</button>
            <div class="clearfix"></div>
        </form>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

    <script>
        $('#studioList').select2();
    </script>
}