@model IEnumerable<SwitchPlay.Data.Category>
@{
    ViewData["Title"] = "Lista e Kategorive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card strpied-tabled-with-hover">
                    <div class="card-header">
                        <h4 class="card-title">Lista e Kategorive</h4>
                    </div>
                    <div class="card-body table-full-width table-responsive">
                        <a asp-action="Add" asp-controller="Category" class="btn btn-outline-primary">Krijo Kategori</a>
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>Emer</th>
                                    <th>Pershkrimi</th>
                                    <th>Veprimet</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a style="font-size:larger" asp-route-id="@item.Id" asp-action="Edit"><i class="nc-icon nc-settings-tool-66"></i></a>
                                            &emsp;
                                            <a style="font-size:larger; color: red" asp-route-id="@item.Id" asp-action="Delete"><i class="nc-icon nc-simple-remove"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
}